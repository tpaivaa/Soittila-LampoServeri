    print  "".join(plaa)

data = avaa('soittilaFiles.py')
for h in data:
    h = h.rstrip().strip('\'')
    l = getTemp(h)
    l = str(l)
    vt.write(l + '\n')'''

data1 = read_config('soittilaFiles.py')
for n in data1:
    l = getTemp(data1[n])
    l = str(l)
    vt.write( n + ':' + l + '\n' )

syslog.syslog('Kirjoitettiin uudet lamp√∂tilat tiedostoon')
vt.close()
